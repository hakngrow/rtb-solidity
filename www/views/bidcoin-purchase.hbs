<!-- Content Row -->
<div class="container">
    
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <form id="frmBidCoin" name="frmBidCoin" method="post" action="/bidcoins/buy" class="user">

                            <div class="form-group row">
                                
                                <div class="col-sm-5">
                                    <select class="form-control form-select" name="coyId"
                                        placeholder="Companies">
                                        {{#each page.companies}}
                                        <option value="{{coy_id}}">{{name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                    <input type="text" class="form-control form-control-user" name="units"
                                        placeholder="Units in GWei">
                                </div>
                                <div class="col-sm-2">
                                    <input type="submit" value="Buy" class="btn btn-primary btn-user btn-block"/>
                                </div>
                                <div class="col-sm-2">
                                    <a href="/" class="btn btn-danger btn-user btn-block">
                                        Cancel
                                    </a>
                                </div>
                            </div>
                        </form>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
