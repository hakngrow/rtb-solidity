<!-- Content Row -->
<div class="container">
    
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <form id="frmCampaign" name="frmCampaign" method="post" action="/cpns/remove/{{page.campaign.cam_id}}" class="user">

                            <div class="form-group row">
                                <div class="col">
                                    <input type="text" class="form-control form-control-user" name="name"
                                        placeholder="Name" value="{{page.campaign.name}}">
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-6">
                                    <input type="text" class="form-control form-control-user" name="camId"
                                        placeholder="Campaign Id" value="{{page.campaign.cam_id}}">
                                </div>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control form-control-user" name="coyName"
                                        placeholder="Advertiser Name" value="{{page.advertiserName}}">
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <input type="text" class="form-control form-control-user" name="ageLower"
                                        placeholder="From Age" value="{{page.campaign.targetAgeLower}}">
                                </div>
                                <div class="col-sm-3">
                                    <input type="text" class="form-control form-control-user" name="ageUpper"
                                        placeholder="To Age" value="{{page.campaign.targetAgeUpper}}">
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="M" name="genderMale" {{#if page.checkMale}}checked{{/if}}>
                                        <label class="form-check-label" for="genderMale">Male</label>
                                    </div>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="F" name="genderFemale" {{#if page.checkFemale}}checked{{/if}}>
                                        <label class="form-check-label" for="genderFemale">Female</label>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <input type="text" class="form-control form-control-user" name="price"
                                        placeholder="Price" value="{{page.campaign.bidPrice}}">
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <div class="col">
                                    <input type="text" class="form-control form-control-user" name="tags"
                                        placeholder="Tags" value="{{getTags page.campaign.targetTags}}">
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-8">
                                    <input type="submit" value="Remove Campaign" class="btn btn-primary btn-user btn-block"/>
                                </div>
                                <div class="col-sm-4">
                                    <a href="/cpns" class="btn btn-danger btn-user btn-block">
                                        Cancel
                                    </a>
                                </div>
                            </div>
                        </form>
                        <hr>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="pl-5 pb-3">
                    <img src="data:image/jpeg;base64,{{page.campaign.picture}}"/>
                </div>
            </div>
        </div>
    </div>
</div>
