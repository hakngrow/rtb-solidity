<div class="container">
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <form id="frmAuction" name="frmAuction" method="post" action="/auction/campaigns" class="user">
                            <div class="form-group row">
                                <div class="col-sm-9">
                                    <select class="form-control form-select" name="userId"
                                        placeholder="User">
                                        {{#each page.users}}
                                        <option value="{{user_id}}">{{name}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                    <input type="submit" value="Load Impression" class="btn btn-primary btn-user btn-block"/>
                                </div>
                            </div>
                            <hr/>
                        </form>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>