<!-- Content Row -->
<div class="container">
    
    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-7">
                    <div class="p-5">
                        <form id="frmUser" name="frmUser" method="post" action="/users/update/{{page.user.user_id}}" class="user">

                            <div class="form-group row">
                                <div class="col">
                                    <input type="text" class="form-control form-control-user" name="name"
                                        placeholder="Name" value="{{page.user.name}}">
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-sm-4">
                                    <input type="text" class="form-control form-control-user" name="userId"
                                        placeholder="User ID" value="{{page.user.user_id}}" disabled>
                                </div>
                                <div class="col-sm-4">
                                    <input type="text" class="form-control form-control-user" name="age"
                                        placeholder="Age" value="{{page.user.age}}">
                                </div>
                                <div class="col-sm-4">
                                    <input type="radio" id="male" name="gender" value="M" {{#if (isMale page.user.gender)}}checked{{/if}}>
                                    <label for="male" class="col-form-label-sm">Male</label>
                                    <input type="radio" id="female" name="gender" value="F" {{#if (isFemale page.user.gender)}}checked{{/if}}>
                                    <label for="female" class="col-form-label-sm">Female</label>
                                </div>
                                
                            </div>
                            
                            <div class="form-group row">
                                <div class="col">
                                    <input type="text" class="form-control form-control-user" name="tags"
                                        placeholder="Tags" value="{{getTags page.user.tags}}">
                                </div>
                            </div>

                            <input type="file" id="input-files" name="picture" accept="image/*" class="btn btn-secondary btn-block"/>
                            <input type="hidden" id="base64" name="base64" value="data:image/jpeg;base64,{{page.user.picture}}"/>

                            <hr/>

                            <div class="form-group row">
                                <div class="col-sm-8">
                                    <input type="submit" value="Update User" class="btn btn-primary btn-user btn-block"/>
                                </div>
                                <div class="col-sm-4">
                                    <a href="/users" class="btn btn-danger btn-user btn-block">
                                        Cancel
                                    </a>
                                </div>
                            </div>
                        </form>
                        <hr>
                    </div>
                </div>

                <div class="col-lg-5 d-none d-lg-block">
                    <div class="preview-images">
                        <img src="data:image/jpeg;base64,{{page.user.picture}}"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
