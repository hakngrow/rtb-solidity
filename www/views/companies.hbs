<!-- companies Content Row Start -->

<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Coy Id</th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Wallet Address</th>
                            <th width="10%"></th>
                        </tr>
                        {{#each page.companies}}
                        <tr>
                            <td>{{coy_id}}</td>
                            <td>{{name}}</td>
                            <td>{{getCompanyTypeLabel type}}</td>
                            <td>{{address}}</td>
                            <td>
                                <a href="/coys/edit/{{coy_id}}" class="btn btn-info btn-circle btn-sm">
                                    <i class="fas fa-pen"></i>
                                </a>
                                <a href="/coys/delete/{{coy_id}}" class="btn btn-danger btn-circle btn-sm">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<!-- companies Content Row End -->
