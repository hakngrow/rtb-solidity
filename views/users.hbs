<!-- Content Row -->

<div class="row">

    {{#each page.users}}
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">{{name}} ({{user_id}})</h6>
                <div>
                    <a href="/users/edit/{{user_id}}" class="btn btn-info btn-circle btn-sm">
                        <i class="fas fa-pen"></i>
                    </a>
                    <a href="/users/delete/{{user_id}}" class="btn btn-danger btn-circle btn-sm">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            </div>
            <!-- Card Body -->
            <div class="card-body">

                <img class="card-img" src="data:image/jpeg;base64,{{picture}}" style="margin-bottom: 0.75rem;"/>

                age: {{age}}, gender: {{gender}}<br/>
                <div class="dropdown-divider"></div>

                tags: {{getTags tags}}
                <div class="dropdown-divider"></div>

            </div>
        </div>
    </div>
    {{/each}}

</div>